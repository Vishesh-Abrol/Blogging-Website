<%- include("partials/header"); -%>

<span class="home-btn">
  <a href="/homeloggedin">
    <span class="glyphicon glyphicon-home"></span>Home
  </a>
</span>
<span class="logout-btn">
  <a class="btn btn-lg" href="/logout" role="button">Log Out</a>
</span>


<div class="main container above-margin">

    <h1>Posts</h1>
    <% posts.forEach(function(post) { %>
        <div class="row border">
          <div class="col-sm-4 img-container">
            <img src="<%=post.image%>" class="image-home">
          </div>
          <div class="col-sm-8 text-container">
            <h2> <%= post.title %></h2>
            <p> 
                <%= (post.body).substring(0,100) + "..." %>
                <a href="/posts/<%=post.id%>">Read More</a> 
            </p>
            <form action="/deletepost/<%=post.id%>" method="POST">
                <button type="submit" class="btn btn-danger dlt-btn">Delete Post</button>
            </form>
          </div>
        </div>
    <% }) %>

</div>

<%- include("partials/footer"); -%>